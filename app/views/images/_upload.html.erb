<% session_key = Rails.application.config.session_options[:key] -%>

<script type="text/javascript">
  $(function(){
    $('#image_image').live('click', function(){
      return false
    })

    $('#image_image').uploadify({
      swf: '/uploadify/uploadify.swf',
      uploader: '<%= polymorphic_url([item, Image]) %>',
      buttonText: '<%= tr('Upload') %>',
      formData: {
        '_http_accept': 'application/javascript',
        'format': 'js',
        '_method': 'post',
        '<%= session_key %>': '<%= cookies[session_key] %>',
        'authenticity_token': '<%= form_authenticity_token %>'
      },
      onUploadSuccess: function(file, data, response) {
        eval(data)
        $('#images a.fancybox').fancybox()
      }
    })

    $('#image_image').find('span').addClass('btn')

    $('#image_submit').live('click', function(){
      $('#image_image').uploadifyUpload()
      return false
    })
  })
</script>
