        = link_to image_tag('get2gather/get2gather5.jpg'), sign_in_path

        = link_to image_tag('get2gather/get2gather6.jpg'), sign_in_path
        = link_to image_tag('get2gather/get2gather1.jpg'), sign_in_path
        = link_to image_tag('get2gather/get2gather2.jpg'), sign_in_path

        br
        br
