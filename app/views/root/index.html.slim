          li(style="font-size: 16px; line-height: 26px;")= tr('Never miss an event again')
          li(style="font-size: 16px; line-height: 26px;")= tr('No more forever alone')
      .span5.offset1
        h1= tr('For meetup organizers')
        ul
          li(style="font-size: 16px; line-height: 26px;")= tr('Attract new members to your meetup')
