.row
  .span12
    .wrapper
      .hero-unit(style="background: #ffffff; margin: 5px 0 0 0; padding: 0 10px; float: left; width: 280px;")
        h1= tr('Meetup')
        p= tr('regular meeting of people who share a particular interest and have connected with each other through a social website')
      .opening-images
        = link_to image_tag('carousel_01.jpg'), request_invite_users_path
        = link_to image_tag('carousel_02.jpg'), request_invite_users_path
      .hero-unit(style="background: #ffffff; margin: 60px 0 0 0; padding: 0; float: right; width: 290px; text-align: center;")
        - unless Settings.enable_invite_process
          p= link_to tr('Sign in'), new_user_sessions_path, :class => 'btn btn-primary btn-large'
        - else
          p= link_to tr('Request an invite'), request_invite_users_path, :class => 'btn btn-primary btn-large', :style => 'padding: 15px; font-size: 17px;'
        p= tr('It\'s free and always will be.')
      .opening-images
        = link_to image_tag('carousel_03.jpg'), request_invite_users_path
        = link_to image_tag('carousel_04.jpg'), request_invite_users_path

.row
  .span12
    .wrapper.clearfix
