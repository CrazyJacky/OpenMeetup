          p= link_to tr('Sign in'), sign_in_path, :class => 'btn btn-primary btn-large', :style => 'margin-left: 50px; padding: 15px; font-size: 17px;'
        - else
          p= link_to tr('Request an invite'), request_invite_users_path, :class => 'btn btn-primary btn-large', :style => 'margin-left: 35px; padding: 15px; font-size: 17px;'
