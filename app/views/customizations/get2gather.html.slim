.wrapper
  .opening-images
    = link_to image_tag('get2gather/get2gather_logo.png'), sign_in_path
    = link_to image_tag('get2gather/get2gather2.jpg'), sign_in_path
    = link_to image_tag('carousel_01.jpg'), sign_in_path
  .opening-images
    = link_to image_tag('carousel_04.jpg'), sign_in_path
    = link_to image_tag('get2gather/get2gather3.jpg'), sign_in_path
    .opening-container
      .opening-container-table
        .opening-container-tablecell
          - unless Settings.enable_invite_process
            = link_to tr('Sign in'), sign_in_path, class: 'btn btn-primary btn-large opening-button'
          - else
            = link_to tr('Request an invite'), request_invite_users_path, class: 'btn btn-primary btn-large opening-button'
