= semantic_form_for @group_invitation, :url => url do |f|
  = f.inputs do
    .control-group
      = f.label :ids, tr('Names or emails')
      = f.text_field :ids
    = f.input :message
  = f.actions do
    =' f.action :submit, :as => :button
    = link_to tr('Cancel'), members_group_path(@group), :class => 'btn'

javascript:
  $(function() {
    $('#group_invitation_ids').tokenInput('/users.json', {
      allowInsert: true,
      crossDomain: false,
      tokenValue: 'id',
      preventDuplicates: true,
      theme: 'facebook'
    })
  })
