$('#membership_button_for_group_<%= @membership.group.id %>').replaceWith('<%= escape_javascript(render('memberships/button', :group => @membership.group)) %>')
<% if @membership.frozen? -%>
  $('#membership_button_for_group_<%= @membership.group.id %>').closest('.group').removeClass('membered')
<% else %>
  $('#membership_button_for_group_<%= @membership.group.id %>').closest('.group').addClass('membered')
<% end%>
