- if current_user and not @user == current_user
  %p.pull-right= render 'user_follows/button', :user => @user

%h1.user= @user.name

.row
  .span2= render 'menu'
  .span4
    %h3 Következő események
    .list_view= render @user.joined_next_events
  .span4
    %h3 Csoportok
    .list_view= render @user.joined_groups
  .span2
    %h3 Aktivitás
    .list_view= render @user.activities.order('created_at DESC').limit(10)
