= render 'header'

.row
  .span4
    .wrapper
      ul.tiles
        li= link_to "<span class='menu_count'>#{@group.members.size}</span>#{tr('members')}".html_safe, members_group_path(@group)
        li= link_to "<span class='menu_count'>#{@group.events.size}</span>#{tr('events')}".html_safe, events_group_path(@group)
        li= link_to "<span class='menu_count'>#{@group.images.size}</span>#{tr('images')}".html_safe, images_group_path(@group)
      - if @group.url.present?
        div
          ' Honlap:
          = auto_link @group.url

      - if @group.facebook_url.present?
        div
          ' Facebook-oldal:
          = auto_link @group.facebook_url

      - if current_user and not (users = @group.members.where('users.id' => current_user.followed_users.map(&:id)).order('users.name ASC')).empty?
        h3= tr('Friends')
        p= render 'users/user_avatars', :users => users

    - if @group.images.size > 0
      .wrapper
        p= link_to image_tag(@group.images.last.image.url(:normal)), @group.images.last.image.url(:normal), :class => 'fancybox'
        p= link_to tr('All images'), images_group_path(@group)

      /
        - unless (users = @group.members.order('users.name ASC')).empty?
          hr
          h2= tr('Who we are')
          p= render 'users/user_avatars', :users => users

    .wrapper
      h2= tr('Activity')
      - unless (activities = @group.activities.order('created_at DESC').limit(20)).blank?
        .list_view= render activities
      - else
        p= tr('No activity yet.')

    - if Settings.enable_share_buttons
      .wrapper
        ' <div class="fb-like" data-href="#{group_url(@group)}" data-send="false" data-layout="box_count" data-show-faces="false"></div>
        ' <g:plusone size="tall"></g:plusone>
        ' <a href="https://twitter.com/share" class="twitter-share-button" data-count="vertical">Tweet</a>
        ' <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

  .span8
    - if event = @group.next_event
      .wrapper
        h4= link_to event.title, event
        div
          = l(event.start_time)
          = " â†’ "
          = l(event.end_time)
        div
          = event.address
        div
          = link_to "#{event.participations.size} #{tr('participants')}".html_safe, users_event_path(event)

    .wrapper
      = render 'comments/comments', :commentable => @group

- if Settings.enable_share_buttons
  javascript:
    (function() {
      var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
      po.src = 'https://apis.google.com/js/plusone.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
    })();
